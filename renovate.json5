{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':prImmediately',
    ':updateNotScheduled',
    ':ignoreUnstable',
    ':separateMajorReleases',
    'group:monorepos',
    'group:recommended',
    ':automergeDigest',
    ':automergeMinor',
    ':automergePatch',
    ':enablePreCommit',
    ':gitSignOff',
    ':semanticCommits',
    'helpers:pinGitHubActionDigests',
  ],
  automergeType: 'pr',
  enabledManagers: [
    'flux',
    'github-actions',
    'kubernetes',
    'pre-commit',
    'terraform',
    'terragrunt',
  ],
  flux: {
    managerFilePatterns: [
      '/(?:^|/)gotk-components\\.ya?ml$/',
      '/(?:^|/)apps/\\.ya?ml$/',
      '/(?:^|/)release\\.ya?ml$/',
      '/(?:^|/)repository\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/^deploy\\/.*\\.ya?ml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      depNameTemplate: 'opentofu/opentofu',
      datasourceTemplate: 'github-releases',
      managerFilePatterns: [
        '/^\\.opentofu-version$/',
      ],
      matchStrings: [
        '^(?<currentValue>.*)$',
      ],
    },
    {
      customType: 'regex',
      depNameTemplate: 'python',
      datasourceTemplate: 'python',
      managerFilePatterns: [
        '/^\\.python-version$',
      ],
      matchStrings: [
        '^(?<currentValue>.*)$',
      ],
    },
    {
      customType: 'regex',
      depNameTemplate: 'gruntwork-io/terragrunt',
      datasourceTemplate: 'github-releases',
      managerFilePatterns: [
        '/^\\.terragrunt-version$/',
      ],
      matchStrings: [
        '^(?<currentValue>.*)$',
      ],
    },
  ],
  packageRules: [
    {
      matchCategories: [
        'docker',
      ],
      ignorePaths: [
        '**/gotk-components.yaml',
      ],
    },
    {
      matchManagers: [
        'github-actions',
        'pre-commit',
      ],
      semanticCommitScope: 'ci',
      semanticCommitType: 'chore',
    },
    {
      matchManagers: [
        'terraform',
        'terragrunt',
      ],
      semanticCommitScope: 'terraform',
      semanticCommitType: 'feat',
    },
    {
      matchDatasources: [
        'terraform-provider',
        'terraform-module',
      ],
      registryUrls: [
        'https://registry.opentofu.org',
      ],
    },
  ],
}
