{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':prImmediately',
    ':updateNotScheduled',
    ':ignoreUnstable',
    ':separateMajorReleases',
    'group:monorepos',
    'group:recommended',
    ':automergeDigest',
    ':automergeMinor',
    ':automergePatch',
    ':enablePreCommit',
    ':gitSignOff',
    ':semanticCommits',
    'helpers:pinGitHubActionDigests',
  ],
  automergeType: 'pr',
  terraform: {
    ignorePaths: [
      '**/providers.tf',
    ],
  },
  flux: {
    managerFilePatterns: [
      '/(?:^|/)gotk-components\\.ya?ml$/',
      '/(?:^|/)apps/\\.ya?ml$/',
      '/(?:^|/)release\\.ya?ml$/',
      '/(?:^|/)repository\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/^deploy\\/.*\\.ya?ml$/',
    ],
  },
  regexManagers: [
    {
      depNameTemplate: 'opentofu/opentofu',
      datasourceTemplate: 'github-releases',
      versioningTemplate: 'semver',
      fileMatch: [
        '(^|/)\\.opentofu-version$',
      ],
      matchStrings: [
        '^v?(?<currentValue>[^\\s]+)',
      ],
    },
  ],
  packageRules: [
    {
      matchDatasources: [
        'terraform-provider',
        'terraform-module',
      ],
      registryUrls: [
        'https://registry.opentofu.org',
      ],
    },
    {
      matchCategories: [
        'docker',
      ],
      ignorePaths: [
        '**/gotk-components.yaml',
      ],
    },
    {
      matchManagers: [
        'github-actions',
        'pre-commit',
      ],
      semanticCommitScope: 'ci',
      semanticCommitType: 'chore',
    },
    {
      matchManagers: [
        'terraform',
        'terragrunt',
      ],
      semanticCommitScope: 'terraform',
      semanticCommitType: 'feat',
    },
    {
      matchDatasources: [
        'terraform-provider',
        'terraform-module',
      ],
      registryUrls: [
        'https://registry.opentofu.org',
      ],
    },
  ],
}
