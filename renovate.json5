{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':prImmediately',
    ':updateNotScheduled',
    ':ignoreUnstable',
    ':separateMajorReleases',
    'group:monorepos',
    'group:recommended',
    ':enablePreCommit',
    ':gitSignOff',
    ':semanticCommits',
    'helpers:pinGitHubActionDigests',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  flux: {
    ignorePaths: [
      '**/flux-system/gotk-sync.yaml',
    ],
    managerFilePatterns: [
      '/deploy/.*\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/deploy/.*\\.ya?ml$/'
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      depNameTemplate: 'opentofu/opentofu',
      datasourceTemplate: 'github-releases',
      versioningTemplate: 'semver',
      managerFilePatterns: [
        '/\\.opentofu-version$/',
      ],
      matchStrings: [
        '^v?(?<currentValue>[^\\s]+)',
      ],
    },
  ],
  terraform: {
    ignorePaths: [
      '**/providers.tf',
    ],
  },
  packageRules: [
    {
      matchCategories: [
        'docker',
      ],
      ignorePaths: [
        '**/flux-system/gotk-components.yaml',
      ],
    },
    {
      matchManagers: [
        'github-actions',
        'pre-commit',
      ],
      semanticCommitScope: 'ci',
      semanticCommitType: 'chore',
    },
    {
      matchManagers: [
        'terraform',
        'terragrunt',
      ],
      semanticCommitScope: 'terraform',
      semanticCommitType: 'feat',
    },
    {
      matchDatasources: [
        'terraform-provider',
        'terraform-module',
      ],
      registryUrls: [
        'https://registry.opentofu.org',
      ],
    },
  ],
}
