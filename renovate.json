{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "pre-commit",
    "terraform",
    "github-actions"
  ],
  "regexManagers": [
    {
      "depNameTemplate": "opentofu/opentofu",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^\\.opentofu-version$"
      ],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ]
    },
    {
      "depNameTemplate": "gruntwork-io/terragrunt",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^\\.terragrunt-version$"
      ],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ]
    },
    {
      "depNameTemplate": "python",
      "datasourceTemplate": "python",
      "fileMatch": [
        "^\\.python-version$"
      ],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ]
    }
  ]
}
